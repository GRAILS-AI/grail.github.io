---
layout: null
permalink: /search.json
---
[
  {% assign first = true %}
  {% for page in site.html_pages %}
    {% if page.url != "/search.json" and page.title and page.layout %}
      {% unless first %},{% endunless %}
      {% assign first = false %}
      {
        "title": {{ page.title | jsonify }},
        "url": {{ page.url | relative_url | jsonify }},
        "content": {{ page.content | default: "" | strip_html | strip_newlines | jsonify }}
      }
    {% endif %}
  {% endfor %}
]
